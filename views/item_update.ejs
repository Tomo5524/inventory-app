<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>    
    <link rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css", integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z", crossorigin="anonymous" />
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js", integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj", crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js", integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV", crossorigin="anonymous"></script>
    <link rel='stylesheet', href='/stylesheets/style.css'/> 
  </head>
  <body>
    <%- include nav.ejs %>
    <div class="container my-3">
        <h3><%= title %></h3>
        <form action="" method="POST" enctype="multipart/form-data">    
            <div class="form-group">
                <label for="brand">Name: </label>
                <input type="text" class="form-control" name="brand" value="<%= result.brand %>" required minlength="1" placeholder="Enter name">
            </div>
            <div class="form-group">
                <label for="desc">Description: </label>
                <textarea class="form-control" name="desc" placeholder="Enter description"><%= result.desc %></textarea>    
            </div>
            <div class="form-group">
                <label for="genre">Category: </label>
                <select name="genre" value="<%= result._id %>" class="form-control">
                    <% genres.forEach(res =>{ %> 
                        <option value="<%= res._id %>"><%= res.name %></option>                     
                      <% }); %>                     
                </select>    
            </div>            
            <div class="d-flex mb-3">
              <label for="price">Price: </label>
              <input type="number" class="mx-3" name="price" value="<%= result.price %>"  required min="1">
              <label for="stock">Stock: </label>
              <input type="number" value="<%= result.stock %>" class="mx-3" name="stock" required min="1">
            </div>                                                                           
            <div class="mb-3 d-block">
                <label for="image">Image: </label>
                <input type="file" name="image">                
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>            
          </form>
    </div>
      
  </body>
</html>